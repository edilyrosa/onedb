      <h1>Student Enrollment Report</h1>
<!-- table  -->
      <div class="container">


<table class="table table-bordered table-striped text-center mt-4">

    <thead>
        <tr class="bg-primary-text-white">
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">DNI</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Name's Course</th>
            <th scope="col">Name'sLevel</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        <% results.forEach((student)=>{ %>
            <tr>
                <td> <%= student.id %> </td>
                <td> <%= student.name %> </td>
                <td> <%= student.lastname %> </td>
                <td> <%= student.DNI %> </td>
                <td> <%= student.age %> </td>
                <td> <%= student.gender %> </td>
                <td> <%= student.phone %> </td>
                <td> <%= student.email %> </td>
                <td> <%= student.address %> </td>
                <td> <%= student.namecourse %> </td>
                <td> <%= student.namelevel %> </td>
                <td>
                    <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle'></i></a>
                    <a href="/edit/<%= student.id %>" class="btn btn-outline-primary mt-4"><i class='bx bx-edit-alt'></i></a>
                    <a href="/delete" class="btn btn-outline-primary mt-4"><i class='bx bxs-message-alt-x'></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>

</table>
