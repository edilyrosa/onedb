        <!-- Form  -->

        <div class="container mt-4">

        
        <form action="/save" method="POST">

            <div class="mb-3">
                
                
                <label for="name" class="form-label center">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Write your Name">
                
                <label for="lastname" class="form-label center">Last Name</label>
                <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Write your Last Name">

                <label for="DNI" class="form-label">DNI</label>
                <input type="text" class="form-control" id="DNI" name="DNI"  placeholder="Write your DNI">
                

                <label for="age" class="form-label center">Age</label>
                <input type="text" class="form-control" id="age" name="age"  placeholder="Write your Phone Age">
                <br>

                <span>Gender</span>
                <select class="form-select" id="gender" name="gender" aria-label="Default select example">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>

                  <br>
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone"  placeholder="Write your Phone number">
                
                
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Write your Email">

                
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Write your Address">

                <br>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit" tabindex="5">
            <a href="/" class="btn btn-secondary">Cancel</a>
        </form>

    </div>

