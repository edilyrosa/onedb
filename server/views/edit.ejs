        <!-- Form  of Edition -->

       <% if(student) { %>
        <div class="container mt-4">
        
        <form action="/update" method="POST">
            <input  id="id" name="id" value="<%= student.id %>" hidden>
            <div class="mb-3">
                
                
                <label for="name" class="form-label center">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= student.name %>">
                
                <label for="lastname" class="form-label center">Last Name</label>
                <input type="text" class="form-control" id="lastname" name="lastname" value="<%= student.lastname %>">

                <label for="DNI" class="form-label">DNI</label>
                <input type="text" class="form-control" id="DNI" name="DNI"  value="<%= student.DNI %>">
                

                <label for="age" class="form-label center">Age</label>
                <input type="text" class="form-control" id="age" name="age"  value="<%= student.age %>">
                

                <br>
                <select class="form-select" id="gender" name="gender" aria-label="Default select example">
                    <option selected>Gender </option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>

                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone"  value="<%= student.phone %>">
                
                
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" value="<%= student.email %>">

                
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= student.address %>">


                <br>
                <select class="form-select" id="id_course" name="id_course" aria-label="Default select example">
                    <option <%= student.id_course=="1" ? "selected" : "" %> value="1">English</option>
                    <option <%= student.id_course=="2" ? "selected" : "" %> value="2">French</option>
                    <option <%= student.id_course=="3" ? "selected" : "" %> value="3">Italian</option>
                  </select>


                <br>

                <select class="form-select" id="id_level" name="id_level" aria-label="Default select example">
                    <option selected>Level </option>
                    <option <%= student.id_course=="1" ? "selected" : "" %> value="1">Beginner</option>
                    <option <%= student.id_course=="2" ? "selected" : "" %> value="2">Medium</option>
                    <option <%= student.id_course=="3" ? "selected" : "" %> value="3">Advanced</option>
                  </select>

                  <br>

                
            </div>
            <input class="btn btn-primary" type="submit" value="Submit" tabindex="5">
            <a href="/" class="btn btn-secondary">Cancel</a>
        </form>

        </div>
    <% } %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
