    <title>Grades</title>
    <style>


      body{
        margin: 1rem;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
      }
        h1 {
          text-align: center;
          color: rgb(7, 7, 153);
          max-width: 100%;
          font-size:4rem;
        }
        
        h2 {
          text-align: center;
          color: rgb(15, 6, 82);
          max-width: 100%;
          font-size: 3rem;
        }
      
        a{
          text-align: center;
          max-width: 100%;
          font-size: 2rem;
          display: block;
      
        }
      
          </style>
  </head>
  <body>
    <!-- header  -->
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="reportStudents">Students' Report.</a>
        <a class="navbar-brand" href="formSingleStudent">Student's Report.</a>
        <a class="navbar-brand" href="students">Log a friend.</a>
        <a class="navbar-brand" href="studentstable">Log List.</a>
      
      </div>
    </nav>


<h1>Student's Grade ðŸ¥‡</h1>

<!-- table  -->
      <div class="container">


<table class="table table-bordered table-striped text-center mt-4">

    <thead>
        <tr class="bg-primary-text-white">
            <th scope="col">Student's ID</th>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">DNI</th>
            <th scope="col">Course</th>
            <th scope="col">Level</th>
            <th scope="col">Grade</th>
        </tr>
    </thead>

    <tbody>
        <% results.forEach((student)=>{ %>
            <tr>
                <td> <%= student.id %> </td>
                <td> <%= student.name %> </td>
                <td> <%= student.lastname %> </td>
                <td> <%= student.DNI %> </td>
                <td> <%= student.course %> </td>
                <td> <%= student.level %> </td>
                <td> <%= student.grade %> </td>
            </tr>
        <% }) %>
    </tbody>

</table>
      </div>


      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>